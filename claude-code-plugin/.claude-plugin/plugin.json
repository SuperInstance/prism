{
  "name": "prism-project-memory",
  "version": "0.6.0",
  "description": "Simple, stable project memory for Claude Code using local JSON storage. No external dependencies, zero configuration, perfect for projects that need basic search and memory without complexity.",
  "author": {
    "name": "PRISM Team",
    "email": "team@claude-prism.dev"
  },
  "commands": [],
  "agents": [],
  "mcpServers": "./.mcp.json",
  "autoStart": true,
  "permissions": {
    "files": "read",
    "network": "true",
    "environment": "true"
  },
  "features": {
    "autoDetect": true,
    "zeroConfig": true,
    "crossPlatform": true,
    "localStorage": true,
    "noExternalDependencies": true
  },
  "performance": {
    "memoryUsage": "<40MB",
    "searchResponse": "<10ms",
    "indexSize": "60-70% smaller",
    "indexSpeed": "3-4x faster",
    "installationTime": "<60 seconds"
  },
  "supportedLanguages": [
    "javascript",
    "typescript",
    "python",
    "go",
    "rust",
    "java",
    "csharp",
    "php",
    "ruby"
  ]
}